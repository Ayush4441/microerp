<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<GridPane xmlns:fx="http://javafx.com/fxml/1" alignment="CENTER" hgap="10" vgap="10" >
    <columnConstraints>
        <ColumnConstraints percentWidth="20" />
    </columnConstraints>
    <rowConstraints>
        <RowConstraints percentHeight="15" />
    </rowConstraints>
    
    <!-- Title -->
    <Label text="Connection" fx:id="connectionLabel" GridPane.columnIndex="0" GridPane.rowIndex="0" GridPane.columnSpan="2"/>

    <!-- Database Address -->
    <Label text="Database Address:" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
    <TextField fx:id="dbAddressField" GridPane.columnIndex="1" GridPane.rowIndex="1"/>
	
    <!-- Username -->
    <Label text="Username:" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
    <TextField fx:id="usernameField" GridPane.columnIndex="1" GridPane.rowIndex="2"/>

    <!-- Password -->
    <Label text="Password:" GridPane.columnIndex="0" GridPane.rowIndex="3"/>
    <PasswordField fx:id="passwordField" GridPane.columnIndex="1" GridPane.rowIndex="3"/>
	
    <!-- Connect Button -->
    <Button text="Connect" fx:id="connectButton" GridPane.columnIndex="0" GridPane.rowIndex="6" GridPane.columnSpan="2" onAction="#onConnect"/>

	<!-- Error -->
	<Label text="Error" fx:id="errorLabel" GridPane.columnIndex="0" GridPane.rowIndex="7" GridPane.columnSpan="2"/>
</GridPane>
